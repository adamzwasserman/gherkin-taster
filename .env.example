# Gherkin Taster Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Linear API Configuration
LINEAR_API_TOKEN=lin_api_your_token_here
LINEAR_ORG=your-organization
LINEAR_TEAM=ENG

# Linear OAuth Configuration (for user authentication)
LINEAR_OAUTH_CLIENT_ID=your_client_id_here
LINEAR_OAUTH_CLIENT_SECRET=your_client_secret_here

# Required: GitHub API Configuration
GITHUB_API_TOKEN=ghp_your_token_here
GITHUB_ORG=your-organization

# Optional: LLM API for AI Commit Messages
LLM_API_KEY=sk-ant-your_anthropic_key_here
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4

# Redis Configuration (auto-configured for Docker)
REDIS_URL=redis://gherkin-redis:6379/0

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Session Configuration
SESSION_TTL=86400  # 24 hours
EDIT_LOCK_TTL=1800  # 30 minutes

# Email Notifications (optional)
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=notifications@yourdomain.com
# EMAIL_SMTP_PASSWORD=your_password
# EMAIL_FROM_ADDRESS=gherkin-taster@yourdomain.com

# Webhook Configuration (optional)
# AUTOMATION_WEBHOOK_URL=https://your-automation-service/webhook
